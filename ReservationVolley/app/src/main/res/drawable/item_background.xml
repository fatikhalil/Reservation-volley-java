<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="12dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D19BDB" />
            <corners android:radius="12dp" />
            <stroke android:width="5dp" android:color="#131313" />
        </shape>
    </item>
</layer-list>