<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D19BDB"
    android:orientation="vertical"
    android:padding="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/item_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
        <Spinner
            android:id="@+id/spinnerTypeChambre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textColorHint="#131313" />
        <EditText
            android:id="@+id/editPrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="8dp"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#0C0C0C" />
        <Spinner
            android:id="@+id/spinnerDispoChambre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textColorHint="#131313" />
    </LinearLayout>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#161516"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp"
        android:drawableTint="#FFFFFF"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="30sp" />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#131313"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:drawableTint="#FFFFFF"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="30sp" />

</LinearLayout>